<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="unitConverter.Views.ConvertPage"
             xmlns:vm="clr-namespace:unitConverter.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:ConvertViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding InputAmount}" Placeholder="Unit to Convert" />
            <Picker Title="Select a Unit to Convert"
                    ItemsSource="{Binding ConvertableUnits}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedUnit}" />
            <Entry Text="{Binding ConvertAmount}" />
            <Picker Title="What should we convert to?"
                    ItemsSource="{Binding ConvertableUnits}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedUnit}" />
            <Button Margin="0,10,0,0" Text="Convert" 
                    Command="{Binding ConvertCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>